<% provide(:title, "Update Profile") %>
<h1>Update Your Profile</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user) do |field| %>
      <%= render 'shared/error_messages', object: field.object %>

      <%= field.label :name %>
      <%= field.text_field :name, class: 'form-control' %>

      <%= field.label :email %>
      <%= field.email_field :email, class: 'form-control' %>

      <%= field.label :password %>
      <%= field.password_field :password, class: 'form-control' %>

      <%= field.label :password_confirmation, "Confirm Password" %>
      <%= field.password_field :password_confirmation, class: 'form-control' %>

      <%= field.submit "Update Changes", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
