<% provide(:title, 'Sign In') %>
<h1>Sign In</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(:session, url: login_path) do |field| %>

      <%= field.label :email %>
      <%= field.email_field :email, class: 'form-control' %>

      <%= field.label :password %>
      <%= field.password_field :password, class: 'form-control' %>

      <%= field.submit "Log In", class: "btn btn-primary" %>
    <% end %>

    <p>New User? <%= link_to "Sign Up!", signup_path %></p>
  </div>
</div>
